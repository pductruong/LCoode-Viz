{
  "name": "lcode-viz-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm --filter @lcode-viz/backend dev\" \"pnpm --filter @lcode-viz/frontend dev\" --names \"backend,frontend\" --prefix-colors \"blue,green\"",
    "build": "pnpm --filter @lcode-viz/backend build && pnpm --filter @lcode-viz/frontend build",
    "lint": "pnpm --recursive lint",
    "format": "pnpm --recursive format",
    "type-check": "pnpm --recursive type-check",
    "test": "pnpm --filter @lcode-viz/backend test",
    "clean": "pnpm --recursive exec rm -rf dist node_modules"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "typescript": "^5.9.3"
  }
}
